@model DataLayer.ViewModel.Admin.Order.SearchingViewModel
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 id="lblTitleConfirmYesNo" class="modal-title">Confirmation</h4>
        </div>
        <div class="modal-body">
            <div id="lblMsgConfirmYesNo">
                <div class="row">
                    <div class="col-md-12">
                        <label class="control-label col-md-3">Tình trạng HĐ</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(q => q.StatusId, Model.OrderStatus, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-12" style="margin-top:8px;margin-bottom: -15px;">
                        <div class="panel panel-info">
                            <div class="panel-heading">Thông tin khách hàng</div>
                            <div class="panel-body" id="divInfoOrder-orderDetail">
                                <!--info customer-->
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã SP</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </thead>
                            <tbody id="divCartDetail-orderDetail">
                                <!--products in cart-->
                            </tbody>
                            <tfoot id="divInfoPromotion-orderDetail" style="border-top:2px inset;">
                                <!-- append if have promotion-->
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" @*style="margin: -35px 0 0 0 ;"*@>
            <button id="btnYesConfirmYesNo" type="button" class="btn btn-primary" @*data-dismiss="modal"*@>
                <i class="fa fa-floppy-o fa-lg"></i> &nbsp; Lưu
            </button>

            <button id="btnNoConfirmYesNo" type="button" class="btn btn-default">Hủy</button>
        </div>
    </div>
</div>

<script id="tplCartDetail-orderDetail" type="x-tmpl-mustache">
    <tr>
        <td>{{OrderNumber}}</td>
        <td>{{ProductId}}</td>
        <td>{{ProductName}}</td>
        <td>{{Quantity}}</td>
        <td>{{Price}}</td>
    </tr>
</script>

<script id="tplInfoPromotion-orderDetail" type="x-tmpl-mustache">
    <tr>
        <td colspan="4">
            <strong>Thành tiền</strong>
        </td>
        <td>
            <strong>{{Amount}}</strong>
        </td>
    </tr>

    <tr>
        <td colspan="4">Chiết khấu</td>
        <td>{{Discount}} %</td>
    </tr>

    <tr>
        <td colspan="4">Khuyến mãi</td>
        <td>{{Promotion}}</td>
    </tr>
    <tr>
        <td colspan="4">Tổng cộng</td>
        <td>
            <strong>{{Total}}</strong>
        </td>
    </tr>
</script>

<script id="tplInfoOrder-orderDetail" type="x-tmpl-mustache">
    <div class="col-md-12">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4">Người giao</label>
                <div class="col-md-8">
                    <p>{{ShipName}}</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Địa chỉ</label>
                <div class="col-md-8">
                    <p>{{ShipAddress}}</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Ngày đặt</label>
                <div class="col-md-8">
                    <p>{{CreatedDate}}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4">Email</label>
                <div class="col-md-8">
                    <p>{{ShipEmail}}</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Điện thoại</label>
                <div class="col-md-8">
                    <p>{{ShipMobile}}</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Thuộc kh.mãi</label>
                <div class="col-md-8">
                    <p>{{PromotionName}}</p>
                </div>
            </div>
        </div>
    </div>
</script>
