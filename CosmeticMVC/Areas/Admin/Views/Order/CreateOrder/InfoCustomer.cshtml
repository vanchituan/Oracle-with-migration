@model DataLayer.Framework.Order

<div class="panel panel-info">
    <div class="panel-heading">
        Thông tin khách hàng
    </div>
    <div class="panel-body">
        <div class="form-group col-md-12">
            <label>
                <input type="radio" name="radio" value="1" checked="checked" /> &nbsp; Khách lẽ
            </label> &nbsp;
            <label>
                <input type="radio" name="radio" value="2" /> &nbsp; Khách quen
            </label>&nbsp;
            <label>
                <input type="radio" name="radio" value="3" /> &nbsp; TT profile
            </label>
        </div>

        <form id="frmOrder">
            <div class="form-group col-md-12">
                <label class="control-label col-md-3">Tên KH</label>
                <div class="col-md-9 input-group" style="padding-right: 14px;padding-left: 18px;">
                    <input type="text" id="txtCustomerName" class="form-control" placeholder="Nhập tên khách hàng.." />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" id="btnModalCustomer">
                            <i class="fa fa-expand"></i>
                        </button>
                    </span>
                </div>
            </div>

            <div class="form-group col-md-12">
                <label class="control-label col-md-3">Ng.nhận</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ShipName, new { @class = "form-control", @required = "true" })
                </div>
            </div>

            <div class="form-group col-md-12">
                <label class="control-label col-md-3">Đ/thoại</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ShipMobile, new { @class = "form-control", @required = "true" })
                </div>
            </div>

            <div class="form-group col-md-12">
                <label class="control-label col-md-3">Email</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ShipEmail, new { @class = "form-control", @required = "true" })
                </div>
            </div>

            <div class="form-group col-md-12">
                <label class="control-label col-md-3">Đ/Chỉ</label>
                <div class="col-md-9 input-group" style="padding-right: 14px;padding-left: 18px;">
                    <input type="text" class="form-control" required id="txtAddress" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btnAddressDetailExpand" type="button">
                            <i class="fa fa-expand"></i>
                        </button>
                    </span>
                </div>
            </div>

            <div class="hidden">
                @Html.HiddenFor(m => m.ShipAddress, new { @name = "ShipAddress" })
                @Html.HiddenFor(m => m.CustomerId, new { @name = "CustomerId" })
                @Html.HiddenFor(m => m.Total, new { @name = "Total" })
                @Html.HiddenFor(m => m.CreatedDate, new { @name = "CreatedDate" })
                @Html.HiddenFor(m => m.ProvinceId, new { @name = "ProvinceId" })
                @Html.HiddenFor(m => m.DistrictId, new { @name = "DistrictId" })
                @Html.HiddenFor(m => m.PrecinctId, new { @name = "PrecinctId" })
                @Html.Hidden("Discount");
            </div>
        </form>

        <div class="pull-right">
            <button type="button" class="btn btn-warning" id="btnSubmit">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> &nbsp;Đặt hàng
            </button>
        </div>
    </div>
</div>

<div id="modal-address-detail" class="modal fade">
    @{Html.RenderPartial("CreateOrder/AddressDetail");}
</div>