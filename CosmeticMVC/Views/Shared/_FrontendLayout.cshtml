<!DOCTYPE HTML>
<html>
<head>
    <title>Cửa hàng mỹ phẩm</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    @Styles.Render("~/bundles/csscore")
    @Scripts.Render("~/bundles/fancybox")
</head>
<body>
    @RenderSection("jsHeader", required: false)
    <div class="container">
        <div class="wrap">
            <div class="header">
                <div class="headertop_desc">
                    @{Html.RenderAction("TopMenu", "Home");}
                </div>
                <div class="header_top">
                    <div class="logo">
                        <a href="/" ref="nofollow"><img src="/Assets/Client/images/nivea_logo.gif" /></a>
                    </div>
                    @{Html.RenderAction("HeaderCart", "Home");}
                    <script type="text/javascript">
                        function DropDown(el) {
                            this.dd = el;
                            this.initEvents();
                        }
                        DropDown.prototype = {
                            initEvents: function () {
                                var obj = this;

                                obj.dd.on('click', function (event) {
                                    $(this).toggleClass('active');
                                    event.stopPropagation();
                                });
                            }
                        }

                        $(function () {
                            var dd = new DropDown($('#dd'));
                            $(document).click(function () {
                                // all dropdowns
                                $('.wrapper-dropdown-2').removeClass('active');
                            });
                        });
                    </script>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom">
                    @{Html.RenderAction("MainMenu", "Home");}
                    <div class="search_box">
                        <form action="/tim-kiem" method="get">
                            <input type="text" id="txtKeyword" name="keyword" placeholder="Gõ từ khoá"><input type="submit" value="">
                        </form>
                    </div>
                    <div class="clear"></div>
                </div>
                @RenderSection("slide", required: false)
            </div>
            <div class="main">
                @RenderBody()
            </div>
        </div>

        <div class="footer">
            @{Html.RenderAction("Footer", "Home");}
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });
        });
    </script>

    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    @*đợi cho cây DOM load het*@
    @Scripts.Render("~/bundles/jscore")
    @RenderSection("jsFooter", required: false)    @*return false có cung dc k cung k s*@
</body>
</html>
