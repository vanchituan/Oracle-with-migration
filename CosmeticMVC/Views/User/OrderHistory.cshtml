@model List<DataLayer.ViewModel.OrderHisViewModel>
@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_FrontendLayout.cshtml";
}
<style>
    thead{
        border-bottom:3px solid;
    }
</style>
@section jsFooter{
    
<script src="~/Assets/Client/js/controller/UserController.js"></script>
    }

<div class="content">
    <h2>Lịch sử mua hàng</h2>
    <div class="section group table-responsive">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Ngày mua hàng</th>
                    <th>Người nhận hàng</th>
                    <th>Điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Tên khuyến mãi</th>
                    <th>Tổng cộng</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreatedDate</td>
                        <td>@item.ShipName</td>
                        <td>@item.ShipPhone</td>
                        <td>@item.ShipAddress</td>
                        <td><a href="/gioi-thieu">@item.PromotionName</a></td>
                        <td>@item.Total.ToString("N0")</td>
                        <td>
                            <a href="#" class="btnOrderDetail" data-id="@item.OrderID">Chi tiết</a>
                            @*message box*@
                            <div id="modalConfirmYesNo" class="modal fade">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 id="lblTitleConfirmYesNo" class="modal-title">Confirmation</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p id="lblMsgConfirmYesNo">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>Tên sản phẩm</th>
                                                                <th>Số lượng</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @*Nhường chỗ cho đại ca vào*@
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*end message box*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
