@model IEnumerable<DataLayer.Framework.Product>


@foreach (var item in Model)
{
    <div class="grid_1_of_4 images_1_of_4">
        @{var link = "/san-pham/" + item.CategoryId + "/" + item.MetaTitle;}
        <a href="@link"><img src="@item.Image" alt="" /></a>
        <h2>@item.Name</h2>
        <div class="price-details">
            <div class="price-number">
                <p><span class="rupees">@item.Price.Value.ToString("N0")</span></p>
            </div>
            <div class="add-cart">
                <h4>
                    <a class="btnChoose" href="javascript:void(0)" data-productid="@item.Id">Thêm vào giỏ</a>
                </h4>
            </div>
            <div class="clear"></div>
        </div>
    </div>
            }

